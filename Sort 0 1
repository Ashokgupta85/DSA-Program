//TWO POINTER APPROACH

    public static void ZeroOneSort(int arr[], int n) {
        int i = 0, j = n - 1;
        while (i < j) {
            if (arr[i] == 1 && arr[j] == 0 && i<j) {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
                i++;
                j--;
            } else if (arr[i] == 0 && i<j) {
                i++;
            } else {
                j--;
            }
        }
    }

