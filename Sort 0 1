//TWO POINTER APPROACH

public class SortZeroOneTwoPointerAproach {
    public static void ZeroOneSort(int arr[], int n) {
        int i = 0, j = n - 1;
        while (i < n && j > 0) {
            if (arr[i] == 1 && arr[j] == 0) {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            } else if (arr[i] == 0) {
                i++;
            } else {
                j++;
            }
        }
    }
